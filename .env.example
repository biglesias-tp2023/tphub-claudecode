# ===========================================
# TPHub Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Required)
# Get these from: Supabase Dashboard → Settings → API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGc...your-anon-key

# Dev Mode - ONLY set to true for local development
# MUST be false in production
VITE_DEV_AUTH_BYPASS=false

# Calendar Campaigns Storage
# true = localStorage (for demo/development)
# false = Supabase (for production)
VITE_CAMPAIGNS_USE_LOCAL_STORAGE=true

# AWS Athena Configuration (Optional - for data analytics)
# VITE_AWS_ACCESS_KEY_ID=
# VITE_AWS_SECRET_ACCESS_KEY=
# VITE_AWS_REGION=eu-west-3
# VITE_ATHENA_S3_OUTPUT=s3://your-bucket/query-results/
